<resources>
    <!-- Base application theme. -->
    <style name="Theme.ClimbIt" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white_200</item>
        <item name="colorOnSecondary">@color/blue_700</item>
        <!-- Misc colors. -->
        <item name="colorContainer">@color/white_200</item>
        <item name="colorSecondaryContainer">@color/white_300</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DefaultButton">
        <item name="android:textColor">@color/blue_900</item>
        <item name="backgroundTint">@color/blue_200</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="DeleteButton">
        <item name="android:textColor">@color/red_900</item>
        <item name="backgroundTint">@color/red_400</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
</resources>
