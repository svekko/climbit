<resources>
    <!-- Base application theme. -->
    <style name="Theme.ClimbIt" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white_200</item>
        <item name="colorOnSecondary">@color/blue_700</item>
        <!-- Misc colors. -->
        <item name="colorContainer">@color/white_200</item>
        <item name="colorSecondaryContainer">@color/white_300</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>
